<h2 class="page-header"><%= user.name %></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/users/<%= user.id %>/edit">Edit</a>     
    <%- include('../partials/deleteForm.ejs', {url: `/users/${user.id}`}); %>
</div>
<% if (tasksByUser.length >0) { %>
    <h3><%= user.name %></h3>
    <div>
    <ul class="todo-list"></ul>
    <% tasksByUser.forEach(task => {%>
        <li class="todo-list-item">
            <div class="todo-list-item-name"><%= task.content %></div>
            <a href="./edit/<%= task._id %>" class="edit">
            <span class="fas fa-edit"></span>
            </a>
            <a href="./remove/<%= task._id %>" class="remove">
            <span class="fas fa-times"></span>
            </a>
        </li>
    <% });%>
</ul>
</div>

<% } %>