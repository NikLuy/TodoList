<h2 class="page-header">Edit List</h2>
<div class="card row">
    <div class="form-group row mb-2">
        <div class="col-sm-6">
            <label for="firstname">Name</label>
            <input type="text" class="form-control" readonly value="<%= locals.todolist != null ? todolist.name:'' %>" placeholder="Name">
        </div>
        <div class="col-sm-4">
            <label for="lastname">User</label>
            <input type="text" class="form-control" readonly value="<%= locals.todolist != null ? todolist.user.name :'' %>" placeholder="User">
        </div>

        <div class="col-sm-2">
            <label for="email">Privat</label>
            <input type="email" class="form-control" readonly value="<%= locals.todolist != null ? todolist.private :'' %>"  placeholder="false">
        </div>
    </div>
</div>
<div class="row">
    <%- include('_form_fields', {url: `/todolists/${todolist.id}?_method=PUT`, submitBtnText:'Save', collapsBtnText:'Edit List'})%>
    <div class="col-sm-2">
        <a class="btn btn-danger mt-3 mb-1" href="/todolists/">Cancel</a>
    </div>
</div>
