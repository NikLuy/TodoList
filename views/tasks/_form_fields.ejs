<div class="form-row">
    <div class="form-item">
        <label>Beschreibung</label>
        <input type="text" name="content" value="<%= task.content%>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>User</label>
        <select name="user" >
        <% users.forEach(user => { %>
            <option <% if (user.id === task.user) {%> selected <%}%> value="<%= user.id %>"><%= user.name %> </option>
        <%  }); %>
        </select>
    </div>
    <div class="form-item">
        <label>Maschine</label>
        <select name="machine" >
        <% machines.forEach(machine => { %>
            <option <% if (machine.id === task.machine) {%> selected <%}%> value="<%= machine.id %>"><%= machine.name %> </option>
        <%  }); %>
        </select>
    </div>
</div>

